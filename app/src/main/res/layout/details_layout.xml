<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="@dimen/ic_s"
                android:layout_height="@dimen/ic_s"
                android:layout_gravity="center"
                android:src="@drawable/ic_views_black_24dp" />

            <TextView
                android:id="@+id/details_views_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="570"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="@dimen/ic_s"
                android:layout_height="@dimen/ic_s"
                android:layout_gravity="center"
                android:src="@drawable/ic_like_black_24dp" />

            <TextView
                android:id="@+id/details_favs_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="356"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="@dimen/ic_s"
                android:layout_height="@dimen/ic_s"
                android:layout_gravity="center"
                android:src="@drawable/ic_file_download_black_24dp" />

            <TextView
                android:id="@+id/details_downloads_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="215"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="@dimen/ic_sm"
                    android:layout_height="@dimen/ic_sm"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_aspect_ratio_black_24dp" />

                <TextView
                    android:id="@+id/details_ratio_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:text="5000x4000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="@dimen/ic_sm"
                    android:layout_height="@dimen/ic_sm"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_color_palette_black_24dp" />

                <TextView
                    android:id="@+id/details_palette_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:text="#6E633A"
                    android:textSize="16sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/circle"
                    android:padding="1dp">

                    <ImageView
                        android:id="@+id/details_palette_iv"
                        android:layout_width="@dimen/ic_xxs"
                        android:layout_height="@dimen/ic_xxs"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_circle_black_24dp" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="@dimen/ic_sm"
                    android:layout_height="@dimen/ic_sm"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location_black_24dp" />

                <TextView
                    android:id="@+id/details_location_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="Egypt, Cairo"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="@dimen/ic_sm"
                    android:layout_height="@dimen/ic_sm"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera_black_24dp" />

                <TextView
                    android:id="@+id/details_camera_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="Conan EOS 4D"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/ic_sm"
                    android:layout_height="@dimen/ic_sm"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_iso_black_24dp" />

                <TextView
                    android:id="@+id/details_iso_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:text="100"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="@dimen/ic_sm"
                    android:layout_height="@dimen/ic_sm"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_exposure_time_black_24dp" />

                <TextView
                    android:id="@+id/details_exposure_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="0.011111111111112"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="@dimen/ic_sm"
                    android:layout_height="@dimen/ic_sm"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_aperture_black_24dp" />

                <TextView
                    android:id="@+id/details_aperture_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:text="4.970854"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="@dimen/ic_sm"
                    android:layout_height="@dimen/ic_sm"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_aspect_ratio_black_24dp" />

                <TextView
                    android:id="@+id/details_focal_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:text="37"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/cardview_shadow_start_color" />

    <TextView
        android:id="@+id/details_categories_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Categories: earth, nature, wind, road"
        android:textSize="16sp" />
</LinearLayout>